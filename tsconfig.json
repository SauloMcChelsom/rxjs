{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "lib": ["es6","es2017",  "dom"],
    "allowJs": true,
    "outDir": "./dist/",
    "rootDir": "src",
    "sourceMap": true,  
    "noImplicitAny": false,  
    "moduleResolution": "node",
    "strict": false,
    "esModuleInterop": true,
    "types": ["node"],
    "skipLibCheck": true,
    "resolveJsonModule": true
  },
  "include": ["src/**/*"],
  "exclude": ["src/**/*.spec.ts"]
}